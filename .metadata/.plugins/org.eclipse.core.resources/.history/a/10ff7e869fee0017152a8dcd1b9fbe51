package com.regex;

class Solution {
    public boolean isMatch(String s, String r) {
    	if (r.isEmpty()) return s.isEmpty();
        boolean first_match = (!s.isEmpty() && 
                               (r.charAt(0) == s.charAt(0) || r.charAt(0) == '.'));
        
        if (r.length() >= 2 && r.charAt(1) == '*'){
            return (isMatch(s, r.substring(2)) || 
                    (first_match && isMatch(s.substring(1), r)));
        } else {
            return first_match && isMatch(s.substring(1), r.substring(1));
        }
    }
}


public class StringMatch {
	public static void main(String[] args) {
		Solution sol = new Solution();
		System.out.println(sol.isMatch("a.aabc", "a*b."));
	}
}

